{
  "name": "@c4605/react-components",
  "description": "Some useful React components",
  "main": null,
  "repository": "https://github.com/bolasblack/react-components",
  "author": "c4605 <bolasblack@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "docz:dev": "rm -rf .docz && docz dev",
    "docz:build": "rm -rf .docz && docz build",
    "docz:serve": "rm -rf .docz && docz serve",
    "docz:publish": "./scripts/publish_docz.sh",
    "test": "yarn compile && NODE_ENV=test yarn jest --no-cache 'packages/.*/src'",
    "compile": "tsc -b ./tsconfig.compile.json",
    "release": "lerna version --sign-git-tag --conventional-commits --create-release github"
  },
  "prettier": "@c4605/toolconfs/prettierrc",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,sass,less}": [
      "yarn prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "./configs/jestSetup.ts"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "html"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@c4605/toolconfs": "^4.7.1",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "babel-plugin-auto-import": "^1.0.5",
    "coveralls": "^3.0.6",
    "css-loader": "^3.2.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "git-hook-pure": "^1.2.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "lint-staged": "^9.2.5",
    "marked": "^0.7.0",
    "patch-package": "^6.1.4",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^1.18.2",
    "react": "*",
    "react-dom": "*",
    "react-test-renderer": "*",
    "sass": "^1.22.10",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  },
  "resolutions": {
    "**/@types/react": "^16.8.6",
    "**/@types/react-dom": "^16.8.5",
    "**/react": "^16.8.6",
    "**/react-dom": "^16.8.6",
    "**/react-test-renderer": "^16.8.6"
  },
  "devDependencies": {
    "lerna": "^3.16.4"
  }
}
